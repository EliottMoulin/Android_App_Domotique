<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00B41A1A"
    tools:context=".Activities.LoginActivity">



        <android.support.v7.widget.Toolbar
            android:id="@+id/mytoolbarLog"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"


            />


    <EditText
        android:id="@+id/numberPass"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="152dp"
        android:layout_height="45dp"
        android:ems="10"
        android:hint="@string/input_mdp"
        android:inputType="numberPassword"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.451" />

    <Button
        android:id="@+id/buttonPass"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="121dp"
        android:layout_height="44dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/button_bg"
        android:text="OK"
        android:onClick="validatePassword"


        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numberPass"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="21dp"
        app:layout_constraintBottom_toBottomOf="@+id/mytoolbarLog"
        app:layout_constraintEnd_toEndOf="@+id/mytoolbarLog"
        app:layout_constraintStart_toStartOf="@+id/mytoolbarLog"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>